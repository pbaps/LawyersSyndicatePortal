@using LawyersSyndicatePortal.Models
@model LoginViewModel
@{
    // تعيين عنوان الصفحة
    ViewBag.Title = "تسجيل الدخول";
    // تأكد أن هذا الـ Layout هو الـ PublicLayout
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg p-4 mb-5 bg-white rounded">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">@ViewBag.Title</h2>
                    <hr />

                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4 class="text-center mb-4 text-muted">أدخل بيانات حسابك لتسجيل الدخول.</h4>

                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger mb-3", role = "alert" })

                            <div class="form-group mb-3">
                                @* تم تغيير الكلاس من text-md-start إلى text-md-end *@
                                @Html.LabelFor(m => m.IdNumber, new { @class = "control-label text-md-end d-block" })
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.IdNumber, new { @class = "form-control", placeholder = "رقم الهوية" })
                                    @Html.ValidationMessageFor(m => m.IdNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                @* تم تغيير الكلاس من text-md-start إلى text-md-end *@
                                @Html.LabelFor(m => m.Password, new { @class = "control-label text-md-end d-block" })
                                <div class="col-md-12">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "كلمة المرور", autocomplete = "current-password" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="col-md-offset-2 col-md-10 text-right">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-0">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary btn-lg w-100">تسجيل الدخول</button>
                                </div>
                            </div>


                            <p class="text-center mt-3">
                                <a href="@Url.Action("VerifyIdentity", "LawyerPasswordRecovery")" class="btn btn-danger btn-sm" style="font-size: 1.1em; font-weight: bold;">
                                    هل نسيت كلمة المرور؟
                                </a>
                            </p>
                        }
                    </section>
                </div>
            </div>
        </div>
        <div class="col-md-8 col-lg-6 mt-4">
            <section id="helpSection" class="text-center p-4 bg-light rounded shadow-sm">
                <h4 class="mb-3 text-primary">هل تواجه مشكلة في الدخول؟</h4>
                <p class="text-muted">
                    إذا واجهت أي صعوبة في عملية تسجيل الدخول، تأكد من إدخال **رقم الهوية** و**كلمة المرور** الصحيحين.
                    يرجى التحقق من حالة Caps Lock وتأكد من أنك تستخدم البيانات المسجلة في حسابك.
                </p>
                <p class="mt-4">
                    للحصول على مساعدة فورية أو في حال استمرار المشكلة، لا تتردد في التواصل معنا.
                </p>
                <a href="@Url.Action("Contact", "PublicContact")" class="btn btn-outline-info btn-lg">
                    <i class="fas fa-headset"></i> تواصل للاستفسار
                </a>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
