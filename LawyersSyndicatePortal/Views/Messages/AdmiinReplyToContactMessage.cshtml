@model LawyersSyndicatePortal.ViewModels.ReplyMessageViewModel

@{
    ViewBag.Title = "الرد على الرسالة";
}

<div class="container mt-4">
    <h2><i class="fas fa-reply"></i> الرد على رسالة: @Html.DisplayFor(model => model.OriginalSubject)</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" dir="rtl">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" dir="rtl">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="card bg-light mb-4" dir="rtl">
        <div class="card-header">
            <h4 class="card-title"><i class="fas fa-info-circle"></i> تفاصيل الرسالة الأصلية</h4>
        </div>
        <div class="card-body">
            <p><strong>@Html.DisplayNameFor(model => model.SenderName):</strong> @Html.DisplayFor(model => model.SenderName)</p>
            <p><strong>@Html.DisplayNameFor(model => model.SenderEmail):</strong> @Html.DisplayFor(model => model.SenderEmail)</p>
            <p><strong>@Html.DisplayNameFor(model => model.OriginalSubject):</strong> @Html.DisplayFor(model => model.OriginalSubject)</p>
            <hr />
            <p><strong>@Html.DisplayNameFor(model => model.OriginalMessageBody):</strong></p>
            <div class="alert alert-secondary">
                @Html.DisplayFor(model => model.OriginalMessageBody)
            </div>
        </div>
    </div>

    @using (Html.BeginForm("AdmiinReplyToContactMessage", "Messages", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.OriginalMessageId)

        <div class="form-horizontal" dir="rtl">
            <h4><i class="fas fa-paper-plane"></i> نموذج الرد</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.ReplySubject, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ReplySubject, new { htmlAttributes = new { @class = "form-control", dir = "rtl", style = "font-weight: bold;" } })
                    @Html.ValidationMessageFor(model => model.ReplySubject, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ReplyBody, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.ReplyBody, 10, 80, new { @class = "form-control", dir = "rtl", style = "font-weight: bold;" })
                    @Html.ValidationMessageFor(model => model.ReplyBody, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-success"><i class="fas fa-paper-plane"></i> إرسال الرد</button>
                    @Html.ActionLink("إلغاء", "ContactMessages", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    }
</div>