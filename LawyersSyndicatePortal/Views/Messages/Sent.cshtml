@model LawyersSyndicatePortal.ViewModels.MessageListViewModel

@{
    ViewBag.Title = "الرسائل المرسلة";
    // تحديد الـ Layout بناءً على دور المستخدم
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_UserLayout.cshtml";
}

<div class="dashboard-wrapper">
    <h2 class="page-title">
        @ViewBag.Title
    </h2>
    <hr />

    @* Success and Error Messages Section *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-card-glow alert-success-glow mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Html.Raw(TempData["SuccessMessage"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-card-glow alert-danger-glow mb-4" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Html.Raw(TempData["ErrorMessage"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Search and Filter Form *@
    <div class="card-lux mb-4">
        <div class="card-header-lux">
            <h5 class="card-title-lux mb-0">
                <i class="fas fa-filter me-2"></i>
                بحث وتصفية الرسائل المرسلة
            </h5>
        </div>
        <div class="card-body-lux">
            @using (Html.BeginForm("Sent", "Messages", FormMethod.Get, new { @class = "row g-3 align-items-center", id = "searchForm" }))
            {
                <div class="col-md-8">
                    <input type="text" name="searchString" class="form-control" placeholder="ابحث بالاسم، الموضوع، أو المحتوى..." value="@Model.SearchString" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-search me-2"></i> بحث</button>
                </div>
            }
        </div>
    </div>

    @* Messages List *@
    @if (Model.Messages != null && Model.Messages.Any())
    {
        <div class="card-lux">
            <div class="card-header-lux">
                <h5 class="card-title-lux mb-0">
                    <i class="fas fa-paper-plane me-2"></i>
                    قائمة الرسائل المرسلة
                </h5>
            </div>
            <div class="card-body-lux">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered text-right">
                        <thead class="bg-light">
                            <tr>
                                <th>المستلم</th>
                                <th>الموضوع</th>
                                <th>تاريخ الإرسال</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Messages)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReceiverUser.FullName)
                                        <br />
                                        <small class="text-muted">(@Html.DisplayFor(modelItem => item.ReceiverUser.IdNumber))</small>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SentDate)</td>
                                    <td>
                                        @Html.ActionLink("التفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* Pagination and Page Size Dropdown *@
                <div class="d-flex flex-column align-items-center mt-4">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    @Html.ActionLink("السابق", "Sent", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize, searchString = Model.SearchString }, new { @class = "page-link" })
                                </li>
                            }
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    @Html.ActionLink(i.ToString(), "Sent", new { page = i, pageSize = Model.PageSize, searchString = Model.SearchString }, new { @class = "page-link" })
                                </li>
                            }
                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    @Html.ActionLink("التالي", "Sent", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize, searchString = Model.SearchString }, new { @class = "page-link" })
                                </li>
                            }
                        </ul>
                    </nav>
                    <div class="d-flex justify-content-center mt-3">
                        <label for="pageSizeSelect" class="me-2">عدد العناصر في الصفحة:</label>
                        @Html.DropDownList("pageSize", new SelectList(Model.PageSizes, "Value", "Text", Model.PageSize), new { @class = "form-select w-auto", onchange = "this.form.submit();", id = "pageSizeSelect" })
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        @* Message if no messages exist *@
        <div class="card-lux">
            <div class="card-body-lux">
                <div class="alert alert-warning text-center" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> لا توجد لديك رسائل مرسلة حالياً.
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Hide success/error messages after 5 seconds
            window.setTimeout(function () {
                $(".alert-card-glow").fadeTo(500, 0).slideUp(500, function () {
                    $(this).remove();
                });
            }, 5000); // 5 seconds
        });
    </script>
}
