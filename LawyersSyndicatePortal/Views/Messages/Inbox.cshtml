@model LawyersSyndicatePortal.ViewModels.MessageListViewModel

@{
    ViewBag.Title = "صندوق الوارد";
    Layout = "~/Views/Shared/_UserLayout.cshtml"; // استخدام الـ Layout الخاص بالمستخدمين
}

<div class="dashboard-wrapper">
    <h2 class="page-title">
        @ViewBag.Title
    </h2>

    @* Success and Error Messages Section *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-card-glow alert-success-glow mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Html.Raw(TempData["SuccessMessage"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-card-glow alert-danger-glow mb-4" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Html.Raw(TempData["ErrorMessage"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Search and Filter Form *@
    <div class="card-lux mb-4">
        <div class="card-header-lux">
            <h5 class="card-title-lux mb-0">
                <i class="fas fa-filter me-2"></i>
                بحث وتصفية الرسائل
            </h5>
        </div>
        <div class="card-body-lux">
            @using (Html.BeginForm("Inbox", "Messages", FormMethod.Get, new { @class = "row g-3 align-items-center" }))
            {
                <div class="col-md-8">
                    <label for="searchString" class="visually-hidden">نص البحث</label>
                    @Html.TextBox("searchString", Model.SearchString, new { @class = "form-control", placeholder = "ابحث بالاسم، الموضوع، أو المحتوى..." })
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-search me-2"></i> بحث</button>
                </div>
            }
        </div>
    </div>

    @* Messages List *@
    @if (Model.Messages != null && Model.Messages.Any())
    {
        <div class="card-lux">
            <div class="card-header-lux">
                <h5 class="card-title-lux mb-0">
                    <i class="fas fa-inbox me-2"></i>
                    قائمة الرسائل
                </h5>
            </div>
            <div class="card-body-lux">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered text-right">
                        <thead class="bg-light">
                            <tr>
                                <th>المرسل</th>
                                <th>الموضوع</th>
                                <th>تاريخ الإرسال</th>
                                <th>الحالة</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Messages)
                            {
                                <tr class="@(item.IsRead ? "" : "table-info fw-bold")">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SenderUser.FullName)
                                        <br />
                                        <small class="text-muted">(@Html.DisplayFor(modelItem => item.SenderUser.IdNumber))</small>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SentDate)</td>
                                    <td>
                                        @if (item.IsRead)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i> مقروءة</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark"><i class="fas fa-envelope me-1"></i> غير مقروءة</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("التفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm me-2" })
                                        @if (!item.IsAdminBroadcast)
                                        {
                                            @Html.ActionLink("رد", "Reply", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* Pagination and Page Size Dropdown *@
                <div class="d-flex flex-column align-items-center mt-4">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    @Html.ActionLink("السابق", "Inbox", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize, searchString = Model.SearchString }, new { @class = "page-link" })
                                </li>
                            }
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    @Html.ActionLink(i.ToString(), "Inbox", new { page = i, pageSize = Model.PageSize, searchString = Model.SearchString }, new { @class = "page-link" })
                                </li>
                            }
                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    @Html.ActionLink("التالي", "Inbox", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize, searchString = Model.SearchString }, new { @class = "page-link" })
                                </li>
                            }
                        </ul>
                    </nav>

                    <div class="d-flex justify-content-center mt-3">
                        <label for="pageSizeSelect" class="me-2">عدد العناصر في الصفحة:</label>
                        @Html.DropDownList("pageSize", new SelectList(Model.PageSizes, "Value", "Text", Model.PageSize), new { @class = "form-select w-auto", onchange = "this.form.submit();", id = "pageSizeSelect" })
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card-lux">
            <div class="card-body-lux">
                <div class="alert alert-warning text-center" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> لا توجد رسائل واردة حالياً في صندوق الوارد الخاص بك.
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Hide success/error messages after 5 seconds
            window.setTimeout(function () {
                $(".alert-card-glow").fadeTo(500, 0).slideUp(500, function () {
                    $(this).remove();
                });
            }, 5000); // 5 seconds
        });
    </script>
}
