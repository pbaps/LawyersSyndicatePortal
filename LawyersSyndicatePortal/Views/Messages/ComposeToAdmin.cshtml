@model LawyersSyndicatePortal.ViewModels.SendMessageViewModel

@{
    ViewBag.Title = "إرسال رسالة إلى الإدارة";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="dashboard-wrapper">
    <h2 class="page-title">
        @ViewBag.Title
    </h2>
    <hr />

    @* Success/Error Message Section *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-card-glow alert-success-glow mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Html.Raw(TempData["SuccessMessage"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-card-glow alert-danger-glow mb-4" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Html.Raw(TempData["ErrorMessage"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card-lux mb-4">
        <div class="card-header-lux">
            <h5 class="card-title-lux mb-0">
                <i class="fas fa-paper-plane me-2"></i>
                نموذج إرسال رسالة للإدارة
            </h5>
        </div>
        <div class="card-body-lux">
            @using (Html.BeginForm("ComposeToAdmin", "Messages", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @* Hidden field for RecipientType and ReceiverIdNumber *@
                @Html.HiddenFor(model => model.RecipientType, new { @value = "Specific" })
                @Html.HiddenFor(model => model.ReceiverIdNumber) @* This will be pre-filled by the controller *@

                <div class="mb-3">
                    <label class="form-label">المستلم:</label>
                    <input type="text" class="form-control text-dark" value="الإدارة" disabled /> @* Display "الإدارة" as fixed recipient *@
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Subject, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", required = "required", placeholder = "أدخل موضوع الرسالة" })
                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Body, new { @class = "form-label" })
                    @Html.TextAreaFor(model => model.Body, new { @class = "form-control", rows = 8, required = "required", placeholder = "اكتب نص الرسالة هنا..." })
                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2"><i class="fas fa-paper-plane me-2"></i> إرسال الرسالة</button>
                    @Html.ActionLink("إلغاء", "Inbox", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Hide success/error messages after 5 seconds
            window.setTimeout(function () {
                $(".alert-card-glow").fadeTo(500, 0).slideUp(500, function () {
                    $(this).remove();
                });
            }, 5000); // 5 seconds
        });
    </script>
}
