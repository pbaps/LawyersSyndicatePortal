@model LawyersSyndicatePortal.ViewModels.BroadcastListViewModel

@{
    ViewBag.Title = "التعميمات والإعلانات";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* تم إزالة روابط CSS الزائدة هنا، لأنها يتم تضمينها بالفعل في _AdminLayout.cshtml *@

<div class="container py-5" dir="rtl">
    <h2 class="text-right mb-4">@ViewBag.Title</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-right" role="alert">
            @Html.Raw(TempData["SuccessMessage"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show text-right" role="alert">
            @Html.Raw(TempData["ErrorMessage"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white text-right">
            <h5 class="mb-0">بحث وتصفية التعميمات</h5>
        </div>
        <div class="card-body">
            @* تم تحديث اسم الإجراء إلى AdminBroadcastsIndex ليتجنب الغموض *@
                        @using (Html.BeginForm("AdminBroadcastsIndex", "Messages", FormMethod.Get, new { @class = "row g-3 align-items-center", id = "searchForm" }))
                        {
                            <div class="col-md-8">
                                <input type="text" name="searchString" class="form-control" placeholder="ابحث حسب الموضوع أو النص..." value="@Model.SearchString" />
                            </div>
                            <div class="col-md-4 text-end">
                                <button type="submit" class="btn btn-primary me-2"><i class="fas fa-search"></i> بحث</button>
                                @* تم تحديث اسم الإجراء إلى AdminBroadcastsIndex *@
                                @Html.ActionLink("مسح البحث", "AdminBroadcastsIndex", "Messages", null, new { @class = "btn btn-secondary" })
                            </div>
                        }
                    </div>
                </div>

                @if (Model.Broadcasts != null && Model.Broadcasts.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered text-right">
                            <thead class="table-primary">
                                <tr>
                                    <th>الموضوع</th>
                                    <th>المرسل</th>
                                    <th>تاريخ الإرسال</th>
                                    <th>إجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var userBroadcast in Model.Broadcasts)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => userBroadcast.Broadcast.Subject)</td>
                                        <td>@Html.DisplayFor(modelItem => userBroadcast.Broadcast.SenderUser.FullName)</td>
                                        <td>@Html.DisplayFor(modelItem => userBroadcast.Broadcast.SentDate)</td>
                                        <td>
                                            @Html.ActionLink("التفاصيل", "Details", new { id = userBroadcast.Broadcast.Id, type = "broadcast" }, new { @class = "btn btn-info btn-sm" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <nav aria-label="Page navigation" class="d-flex justify-content-center mt-4">
                        <ul class="pagination">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    @* تم تحديث اسم الإجراء إلى AdminBroadcastsIndex *@
                                    @Html.ActionLink("السابق", "AdminBroadcastsIndex", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize, searchString = Model.SearchString }, new { @class = "page-link" })
                                </li>
                            }
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    @* تم تحديث اسم الإجراء إلى AdminBroadcastsIndex *@
                                    @Html.ActionLink(i.ToString(), "AdminBroadcastsIndex", new { page = i, pageSize = Model.PageSize, searchString = Model.SearchString }, new { @class = "page-link" })
                                </li>
                            }
                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    @* تم تحديث اسم الإجراء إلى AdminBroadcastsIndex *@
                                    @Html.ActionLink("التالي", "AdminBroadcastsIndex", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize, searchString = Model.SearchString }, new { @class = "page-link" })
                                </li>
                            }
                        </ul>
                    </nav>

                    <div class="d-flex justify-content-center mt-3">
                        <label for="pageSizeSelect" class="me-2">عدد العناصر في الصفحة:</label>
                        @* تم تحديث اسم الإجراء ليتماشى مع التغيير في BeginForm *@
            @using (Html.BeginForm("AdminBroadcastsIndex", "Messages", FormMethod.Get, new { id = "pageSizeForm" }))
            {
                @Html.Hidden("searchString", Model.SearchString)
                @Html.Hidden("page", Model.CurrentPage)
                @Html.DropDownList("pageSize", new SelectList(Model.PageSizes, "Value", "Text", Model.PageSize), new { @class = "form-select w-auto", onchange = "document.getElementById('pageSizeForm').submit();", id = "pageSizeSelect" })
            }
        </div>
        }
        else
        {
        <div class="alert alert-warning text-center" role="alert">
            <i class="fas fa-exclamation-triangle"></i> لا توجد تعميمات أو إعلانات حالياً.
        </div>
        }
    </div>
    </div>
    @section Scripts {
        <script>
            $(document).ready(function () {
                window.setTimeout(function () {
                    $(".alert").fadeTo(500, 0).slideUp(500, function () {
                        $(this).remove();
                    });
                }, 5000);
            });
        </script>
    }
