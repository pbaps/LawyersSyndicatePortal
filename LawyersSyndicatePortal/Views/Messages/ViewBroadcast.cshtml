@model LawyersSyndicatePortal.Models.Broadcast

@{
    ViewBag.Title = Model.Subject;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@Model.Subject</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">@Html.Raw(Model.Body)</p>
                </div>
                <div class="card-footer text-muted d-flex justify-content-between">
                    <small>المرسل: الإدارة</small>
                    <small>تاريخ الإرسال: @Model.SentDate.ToString("yyyy-MM-dd")</small>
                </div>
            </div>
        </div>
    </div>
</div>