@model LawyersSyndicatePortal.ViewModels.OfficeAndDamageReportResultViewModel

@if (Model.Reports.Any())
{


    <div class="badge bg-success text-white fs-6 py-2 px-3 rounded-pill shadow-sm mb-1" dir="rtl">
        <i class="fas fa-database me-2"></i> تم العثور على <strong>  @Model.SearchResultsCount</strong> سجل مطابق لنتائج البحث.
    </div>
    <h4 class="mt-4">
        نتائج البحث:

    </h4>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                @foreach (var col in Model.SelectedColumns)
                {
                    <th>@col.DisplayName</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var reportItem in Model.Reports)
            {
                <tr>
                    @foreach (var col in Model.SelectedColumns)
                    {
                        <td>@GetPropertyValue(reportItem, col.ColumnName)</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info text-center mt-5" role="alert">
        لا توجد نتائج مطابقة لمعايير البحث.
    </div>
}

@helper GetPropertyValue(object obj, string propertyName)
{
    var prop = obj.GetType().GetProperty(propertyName);
    if (prop != null)
    {
        @prop.GetValue(obj, null);
    }
}
