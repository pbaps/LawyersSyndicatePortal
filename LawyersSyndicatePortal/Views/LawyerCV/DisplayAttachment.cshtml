@* المسار: LawyersSyndicatePortal/Views/LawyerCV/DisplayAttachment.cshtml --}}*@
@model LawyersSyndicatePortal.Models.LawyerAttachment

@{
    // تعطيل استخدام أي تخطيط (Layout) لضمان عرض الملف فقط
   
    ViewBag.Title = "عرض المرفق";

    // بناء المسار النسبي للملف بناءً على اسم الملف من النموذج
    string filePath = Url.Content("~/App_Data/Uploads/LawyerAttachments/" + Model.FileName);
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden; /* لمنع ظهور أشرطة التمرير المزدوجة */
            background-color: #f0f0f0; /* لون خلفية خفيف */
        }

        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

        .error-message {
            text-align: center;
            padding-top: 50px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #555;
        }
    </style>
</head>
<body>
    @if (Model != null && !string.IsNullOrEmpty(Model.FileName))
    {
        <iframe src="@filePath"></iframe>
    }
    else
    {
        <div class="error-message">
            <h2>تعذر العثور على المرفق.</h2>
            <p>قد يكون الرابط غير صالح أو تم حذف الملف من الخادم.</p>
        </div>
    }
</body>
</html>