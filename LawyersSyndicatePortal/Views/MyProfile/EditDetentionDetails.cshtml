@model LawyersSyndicatePortal.ViewModels.DetentionDetailViewModel

@{
    ViewBag.Title = "تعديل تفاصيل الاعتقال";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="dashboard-wrapper">
    <h2 class="page-title">
        تعديل تفاصيل الاعتقال
    </h2>

    @* Success and Error Messages Section *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-card-glow alert-success-glow mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-card-glow alert-danger-glow mb-4" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card-lux">
        <div class="card-header-lux">
            <h5 class="card-title-lux mb-0">
                <i class="fas fa-user-lock me-2"></i>
                تعديل تفاصيل الاعتقال
            </h5>
        </div>
        <div class="card-body-lux">
            @using (Html.BeginForm("EditDetentionDetails", "MyProfile", FormMethod.Post, new { @class = "row g-3" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger col-12" })
                @Html.HiddenFor(model => model.Id)

                <div class="col-4 mt-4">
                    <div class="form-check form-switch d-flex align-items-center">
                        <label for="wasDetained" class="form-check-label control-label mb-0 me-2">@Html.DisplayNameFor(model => model.WasDetained)</label>
                        @Html.EditorFor(model => model.WasDetained, new { htmlAttributes = new { @class = "form-check-input", id = "wasDetained" } })
                        @Html.ValidationMessageFor(model => model.WasDetained, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div id="detentionDetailsSection" class="col-12" style="@(Model.WasDetained ? "" : "display:none;")">
                    <div class="card-lux mt-3">
                        <div class="card-header-lux">
                            <h5 class="card-title-lux mb-0">
                                <i class="fas fa-search me-2"></i>
                                تفاصيل الاعتقال
                            </h5>
                        </div>
                        <div class="card-body-lux">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="DetentionDuration" class="form-label control-label">@Html.DisplayNameFor(model => model.DetentionDuration)</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                        @Html.DropDownListFor(model => model.DetentionDuration, Model.DetentionDurations, "الرجاء الاختيار", new { @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.DetentionDuration, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-6">
                                    <label for="DetentionStartDate" class="form-label control-label">@Html.DisplayNameFor(model => model.DetentionStartDate)</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                        @Html.EditorFor(model => model.DetentionStartDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.DetentionStartDate, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-6">
                                    <label for="DetentionType" class="form-label control-label">@Html.DisplayNameFor(model => model.DetentionType)</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-list-alt"></i></span>
                                        @Html.DropDownListFor(model => model.DetentionType, Model.DetentionTypes, "الرجاء الاختيار", new { @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.DetentionType, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-6">
                                    <label for="DetentionLocation" class="form-label control-label">@Html.DisplayNameFor(model => model.DetentionLocation)</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                        @Html.EditorFor(model => model.DetentionLocation, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.DetentionLocation, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row g-3 mt-3">
                                <div class="col-4">
                                    <div class="form-check form-switch d-flex align-items-center">
                                        <label for="isStillDetained" class="form-check-label control-label mb-0 me-2">@Html.DisplayNameFor(model => model.IsStillDetained)</label>
                                        @Html.EditorFor(model => model.IsStillDetained, new { htmlAttributes = new { @class = "form-check-input", id = "isStillDetained" } })
                                        @Html.ValidationMessageFor(model => model.IsStillDetained, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div id="releaseDateSection" class="row g-3 mt-3" style="@(Model.IsStillDetained ? "display:none;" : "")">
                                <div class="col-md-6">
                                    <label for="ReleaseDate" class="form-label control-label">@Html.DisplayNameFor(model => model.ReleaseDate)</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-calendar-check"></i></span>
                                        @Html.EditorFor(model => model.ReleaseDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ReleaseDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 text-center mt-4">
                    <button type="submit" value="حفظ" class="btn btn-primary btn-lg me-2">
                        <i class="fas fa-save me-2"></i>حفظ
                    </button>
                    @Html.ActionLink("العودة إلى الملف الشخصي", "Index", "MyProfile", null, new { @class = "btn btn-outline-secondary btn-lg" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Toggle detention details section visibility
            $('#wasDetained').change(function () {
                if ($(this).is(':checked')) {
                    $('#detentionDetailsSection').show();
                } else {
                    $('#detentionDetailsSection').hide();
                    $('#DetentionDuration').val('');
                    $('#DetentionStartDate').val('');
                    $('#IsStillDetained').prop('checked', false).change();
                    $('#DetentionType').val('');
                    $('#DetentionLocation').val('');
                }
            }).change();

            // Toggle release date section visibility based on IsStillDetained
            $('#isStillDetained').change(function () {
                if ($(this).is(':checked')) {
                    $('#releaseDateSection').hide();
                    $('#ReleaseDate').val('');
                } else {
                    $('#releaseDateSection').show();
                }
            }).change();

            // Initialize datepicker for date fields
            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true,
                todayHighlight: true,
                language: 'ar'
            });
        });
    </script>
}