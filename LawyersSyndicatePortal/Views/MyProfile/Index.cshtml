@model LawyersSyndicatePortal.ViewModels.LawyerDetailsViewModel

@{
    ViewBag.Title = "ملفي الشخصي";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="dashboard-wrapper">
    <h2 class="page-title">ملفي الشخصي</h2>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @ViewBag.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (ViewBag.InfoMessage != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle me-2"></i> @ViewBag.InfoMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card-lux">
        <div class="card-header-lux">
            <i class="fas fa-user-tie me-3"></i>
            <h5 class="card-title-lux mb-0">معلومات المحامي الأساسية</h5>
        </div>
        <div class="card-body-lux">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="data-item">
                        <i class="fas fa-id-card"></i>
                        <strong>@Html.DisplayNameFor(model => model.LawyerIdNumber):</strong>
                        <span>@Html.DisplayFor(model => model.LawyerIdNumber)</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="data-item">
                        <i class="fas fa-user"></i>
                        <strong>@Html.DisplayNameFor(model => model.LawyerFullName):</strong>
                        <span>@Html.DisplayFor(model => model.LawyerFullName)</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="data-item">
                        <i class="fas fa-briefcase"></i>
                        <strong>@Html.DisplayNameFor(model => model.ProfessionalStatus):</strong>
                        <span>@Html.DisplayFor(model => model.ProfessionalStatus)</span>
                    </div>
                </div>
                @if (!Model.IsTrainee)
                {
                    <div class="col-md-6">
                        <div class="data-item">
                            <i class="fas fa-user-tag"></i>
                            <strong>@Html.DisplayNameFor(model => model.MembershipNumber):</strong>
                            <span>@Html.DisplayFor(model => model.MembershipNumber)</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="data-item">
                            <i class="fas fa-calendar-alt"></i>
                            <strong>@Html.DisplayNameFor(model => model.PracticeStartDate):</strong>
                            <span>@Html.DisplayFor(model => model.PracticeStartDate)</span>
                        </div>
                    </div>
                }
                @if (Model.IsTrainee)
                {
                    <div class="col-md-6">
                        <div class="data-item">
                            <i class="fas fa-calendar-check"></i>
                            <strong>@Html.DisplayNameFor(model => model.TrainingStartDate):</strong>
                            <span>@Html.DisplayFor(model => model.TrainingStartDate)</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="data-item">
                            <i class="fas fa-chalkboard-teacher"></i>
                            <strong>@Html.DisplayNameFor(model => model.TrainerLawyerName):</strong>
                            <span>@Html.DisplayFor(model => model.TrainerLawyerName)</span>
                        </div>
                    </div>
                }
                <div class="col-md-6">
                    <div class="data-item">
                        <i class="fas fa-venus-mars"></i>
                        <strong>@Html.DisplayNameFor(model => model.Gender):</strong>
                        <span>@Html.DisplayFor(model => model.Gender)</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="data-item">
                        <i class="fas fa-check-circle"></i>
                        <strong>@Html.DisplayNameFor(model => model.IsActive):</strong>
                        <span>@Html.DisplayFor(model => model.IsActive)</span>
                    </div>
                </div>
                @if (Model.IsTrainee)
                {
                    <div class="col-md-6">
                        <div class="data-item">
                            <i class="fas fa-user-graduate"></i>
                            <strong>@Html.DisplayNameFor(model => model.IsTrainee):</strong>
                            <span>@Html.DisplayFor(model => model.IsTrainee)</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="card-lux mt-4">
        <div class="card-header-lux">
            <i class="fas fa-cogs me-3"></i>
            <h5 class="card-title-lux mb-0">إدارة أقسام الملف الشخصي</h5>
        </div>
        <div class="card-body-lux">
            <div class="row g-4 text-center">
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("EditPersonalDetails", "MyProfile")" class="btn-action-card">
                        <i class="fas fa-user-edit"></i>
                        <span>تعديل البيانات الشخصية</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("EditFamilyDetails", "MyProfile")" class="btn-action-card">
                        <i class="fas fa-users"></i>
                        <span>تعديل تفاصيل العائلة</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("EditHealthStatus", "MyProfile")" class="btn-action-card">
                        <i class="fas fa-heartbeat"></i>
                        <span>تعديل الحالة الصحية</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("EditOfficeDetails", "MyProfile")" class="btn-action-card">
                        <i class="fas fa-building"></i>
                        <span>تعديل تفاصيل المكتب</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("EditHomeDamage", "MyProfile")" class="btn-action-card">
                        <i class="fas fa-home"></i>
                        <span>تعديل أضرار المنزل</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("EditOfficeDamage", "MyProfile")" class="btn-action-card">
                        <i class="fas fa-gavel"></i>
                        <span>تعديل أضرار المكتب</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("EditDetentionDetails", "MyProfile")" class="btn-action-card">
                        <i class="fas fa-user-lock"></i>
                        <span>تعديل تفاصيل الاعتقال</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("EditColleagueInfo", "MyProfile")" class="btn-action-card">
                        <i class="fas fa-handshake"></i>
                        <span>تعديل معلومات الزملاء</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("EditGeneralInfo", "MyProfile")" class="btn-action-card">
                        <i class="fas fa-info-circle"></i>
                        <span>تعديل المعلومات العامة</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("EditLawyerAttachments", "MyProfile")" class="btn-action-card">
                        <i class="fas fa-paperclip"></i>
                        <span>تعديل المرفقات</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".alert").fadeTo(500, 0).slideUp(500, function () {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
}