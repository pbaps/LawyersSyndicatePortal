@model LawyersSyndicatePortal.ViewModels.MartyrColleagueViewModel

@{
    var index = ViewData["index"] != null ? (int)ViewData["index"] : 0;
    var prefix = $"MartyrColleagues[{index}]";
    ViewData.TemplateInfo.HtmlFieldPrefix = prefix;
}

<div class="col-12 dynamic-item mb-3">
    <div class="card-lux">
        <div class="card-header-lux d-flex justify-content-between align-items-center">
            <h6 class="card-title-lux mb-0">تفاصيل الشهيد رقم @(index + 1)</h6>
            <button type="button" class="btn btn-sm btn-danger remove-martyr-item">
                <i class="fas fa-trash-alt me-2"></i>إزالة
            </button>
        </div>
        <div class="card-body-lux">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.ColleagueInfoId)

            <div class="row g-3">
                <div class="col-md-6">
                    <label for="@(prefix)_MartyrName" class="form-label control-label">@Html.DisplayNameFor(model => model.MartyrName)</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        @Html.EditorFor(model => model.MartyrName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.MartyrName, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label for="@(prefix)_ContactNumber" class="form-label control-label">@Html.DisplayNameFor(model => model.ContactNumber)</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>