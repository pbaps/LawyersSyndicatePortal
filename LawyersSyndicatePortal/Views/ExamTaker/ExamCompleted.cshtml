@model LawyersSyndicatePortal.ViewModels.ExamResultViewModel

@{
    ViewBag.Title = "نتائج الاختبار";

}

<style>

    /* تحديث الخطوط */
    body {
        background-color: #f5f7fa;
        font-family: 'cairo', sans-serif;
        direction: rtl;
        text-align: right;
    }

    .result-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 10px;
    }

    .result-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        padding: 2.5rem;
        width: 100%;
        max-width: 750px;
        animation: fadeIn 1s ease-in-out;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .result-card:hover {
            transform: translateY(-5px);
        }

    /* تدرج لوني ديناميكي للإطار حسب النتيجة */
    .pass-border::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        border-radius: 20px;
        border: 5px solid transparent;
        background: linear-gradient(45deg, #4CAF50, #8BC34A) border-box;
        -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        z-index: -1;
    }

    .fail-border::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        border-radius: 20px;
        border: 5px solid transparent;
        background: linear-gradient(45deg, #F44336, #FF9800) border-box;
        -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        z-index: -1;
    }

    /* تصميم رسالة النتائج المعلقة */
    .pending-message-container {
        padding: 2rem;
        text-align: center;
        border-radius: 20px;
        background-color: #f0f8ff; /* لون أزرق فاتح */
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        border: 2px solid #3498db; /* إطار أزرق */
    }

        .pending-message-container .icon {
            font-size: 4rem;
            color: #3498db;
            animation: bounce 2s infinite;
            display: inline-block;
            margin-bottom: 1rem;
        }

        .pending-message-container h2 {
            font-size: 1.8rem;
            font-weight: bold;
            color: #2c3e50;
        }

        .pending-message-container p {
            font-size: 1.1rem;
            color: #7f8c8d;
            margin-top: 0.5rem;
        }

    .result-card-header {
        padding-bottom: 2rem;
        border-bottom: 1px solid #e0e0e0;
        margin-bottom: 2rem;
        text-align: center;
    }

    .status-icon {
        font-size: 5rem;
        margin-bottom: 1rem;
        animation: bounceIn 1s ease-out;
    }

    .result-message h2 {
        font-weight: 700;
        color: #2c3e50;
        margin: 0;
    }

    .result-message p {
        color: #7f8c8d;
        font-size: 1.1rem;
        margin-top: 0.5rem;
    }

    .score-summary {
        display: flex;
        justify-content: space-around;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .score-box {
        background: #f8f9fa;
        padding: 1.5rem 2rem;
        border-radius: 15px;
        text-align: center;
        flex: 1;
        margin: 0 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

        .score-box .label {
            color: #7f8c8d;
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }

        .score-box .value {
            font-size: 2.2rem;
            font-weight: 700;
            color: #34495e;
        }

    /* تحديث نمط Percentage Box */
    .percentage-box {
        color: white;
        padding: 2.5rem;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        position: relative;
        z-index: 1;
    }

        .percentage-box .value {
            font-size: 3.5rem;
            font-weight: 900;
        }

    .percentage-pass {
        background: linear-gradient(45deg, #4CAF50, #8BC34A);
    }

    .percentage-fail {
        background: linear-gradient(45deg, #F44336, #FF9800);
    }

    .status-badge {
        font-size: 1.2rem;
        padding: 0.8em 2em;
        border-radius: 50px;
        font-weight: bold;
        display: inline-block;
        margin-top: 1.5rem;
        letter-spacing: 1px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        animation: slideInUp 0.7s ease-out;
    }

    .pass-badge {
        background-color: #2ecc71;
        color: white;
    }

    .fail-badge {
        background-color: #e74c3c;
        color: white;
    }

    .btn-custom {
        background-color: #3498db;
        border: none;
        padding: 18px 40px;
        border-radius: 50px;
        font-size: 1.2rem;
        font-weight: 600;
        transition: all 0.3s ease;
        color: white;
        text-decoration: none;
    }

        .btn-custom:hover {
            background-color: #2980b9;
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 10px 20px rgba(52, 152, 219, 0.3);
        }

    .results-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
        font-size: 1rem;
    }

    /* 🎯 تغييرات CSS لتوسيع عمود "المعلومة" وتقليل المسافات */
    .results-table th, .results-table td {
        padding: 0.7rem; /* تقليل المسافة الداخلية للخلايا */
        text-align: right;
        border-bottom: 1px solid #ddd;
    }

    .results-table th:first-child, .results-table td:first-child {
        width: 60%; /* توسيع عرض عمود "المعلومة" */
    }

    .results-table th {
        background-color: #f8f9fa;
        color: #495057;
        font-weight: 600;
    }

    .results-table tbody tr:hover {
        background-color: #f1f1f1;
    }

    /* تلوين الصفوف بناءً على النتيجة */
    .results-table .pass-row {
        background-color: #e6f7ec;
    }

    .results-table .fail-row {
        background-color: #fde9e9;
    }

    @@media (max-width: 767px) {
        .result-card {
            padding: 1.5rem;
        }

        .row {
            flex-direction: column;
        }

        .col-md-7, .col-md-5 {
            width: 100%;
            margin-bottom: 2rem;
        }

        .percentage-box {
            margin-bottom: 1rem !important;
            padding: 2rem;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes bounceIn {
        0% {
            transform: scale(0.3);
            opacity: 0;
        }

        50% {
            transform: scale(1.1);
            opacity: 1;
        }

        70% {
            transform: scale(0.9);
        }

        100% {
            transform: scale(1);
        }
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-10px);
        }

        60% {
            transform: translateY(-5px);
        }
    }
</style>

<div class="result-container">
    @if (Model.Exam.IsResultVisible)
    {
        <!-- عرض النتائج في حال كانت مرئية -->
        <div class="result-card @(Model.IsGradingComplete ? (Model.IsPassed ? "pass-border" : "fail-border") : "")">
            <div class="result-card-header">
                <div class="text-center mb-4">
                    <h1 class="h3 font-weight-bold text-dark">نتائج الاختبار</h1>
                    <h4 class="text-muted">@Model.Exam.Title</h4>
                    @* تم تحديث السطر التالي ليتحقق من وجود الكائن قبل عرضه *@
                    <h5 class="text-muted">للملتحق: @Model.ExamAttendee.Lawyer.FullName</h5>
                </div>

                @if (Model.IsGradingComplete)
                {
                    if (Model.IsPassed)
                    {
                        <div class="status-icon">🎉</div>
                        <div class="result-message">
                            <h2>تهانينا! لقد نجحت في الاختبار.</h2>
                            <p>لقد اجتزت اختبار @Model.Exam.Title بنجاح.</p>
                        </div>
                    }
                    else
                    {
                        <div class="status-icon">💔</div>
                        <div class="result-message">
                            <h2>للأسف، لم يحالفك الحظ.</h2>
                            <p>نأمل أن تتمكن من المحاولة مرة أخرى قريباً.</p>
                        </div>
                    }
                }
                else
                {
                    <div class="status-icon">📝</div>
                    <div class="result-message">
                        <h2>الاختبار قيد المراجعة...</h2>
                        <p>سيتم مراجعة إجاباتك وتقدير درجتك النهائية قريباً.</p>
                    </div>
                }
            </div>

            <div class="row">
                <div class="col-md-7 d-flex align-items-center justify-content-center">
                    <div class="percentage-box mb-4 @(Model.IsGradingComplete ? (Model.IsPassed ? "percentage-pass" : "percentage-fail") : "percentage-fail")">
                        <div class="label">نسبة درجتك</div>
                        <div class="value">
                            @Math.Round(Model.PassPercentage, 2)%
                        </div>
                        @if (Model.IsGradingComplete)
                        {
                            <div class="status-badge @(Model.IsPassed ? "pass-badge" : "fail-badge")">
                                @(Model.IsPassed ? "ناجح" : "راسب")
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-5 d-flex flex-column justify-content-center">
                    <table class="results-table">
                        <thead>
                            <tr>
                                <th>المعلومة</th>
                                <th>القيمة</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="@(Model.IsPassed ? "pass-row" : "fail-row")">
                                <td>الدرجة المكتسبة</td>
                                <td>@Model.TotalScoreAchieved / @Model.TotalExamScore</td>
                            </tr>
                            <tr>
                                <td>عدد الإجابات الصحيحة</td>
                                <td>@Model.CorrectAnswersCount</td>
                            </tr>
                            <tr>
                                <td>عدد الأسئلة المجابة</td>
                                <td>@Model.TotalAnsweredQuestions</td>
                            </tr>
                            <tr>
                                <td>عدد أسئلة الاختيار من متعدد</td>
                                <td>@Model.TotalMultipleChoiceQuestions</td>
                            </tr>
                            <tr>
                                <td>عدد الأسئلة النصية</td>
                                <td>@Model.TotalTextQuestions</td>
                            </tr>
                            <tr>
                                <td>إجمالي الأسئلة</td>
                                <td>@Model.TotalQuestions</td>
                            </tr>
                            <tr class="@(Model.IsPassed ? "pass-row" : "fail-row")">
                                <td>نسبة النجاح المطلوبة</td>
                                <td>@Model.Exam.PassingScorePercentage%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="text-center mt-5">
                <a href="@Url.Action("Index", "ExamTaker")" class="btn btn-custom">
                    العودة إلى قائمة الاختبارات
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- عرض رسالة النتائج المعلقة في حال كانت النتائج غير مرئية -->
        <div class="result-card pending-message-container">
            <div class="text-center mb-4">
                <h1 class="h3 font-weight-bold text-dark">نتائج الاختبار</h1>
                <h4 class="text-muted">@Model.Exam.Title</h4>
                @* تم تحديث السطر التالي ليتحقق من وجود الكائن قبل عرضه *@
            <h5 class="text-muted">للملتحق: @Model.ExamAttendee.Lawyer.FullName/h5>
            </div>
            <div class="icon">⏳</div>
            <h2>نتيجة الاختبار قيد الانتظار</h2>
            <p>
                سيتم نشر نتائج اختبار <strong>@Model.Exam.Title</strong> قريباً.
                يرجى مراجعة هذه الصفحة لاحقاً.
            </p>
            <div class="text-center mt-5">
                <a href="@Url.Action("Index", "ExamTaker")" class="btn btn-custom">
                    العودة إلى قائمة الاختبارات
                </a>
            </div>
        </div>
    }
</div>
