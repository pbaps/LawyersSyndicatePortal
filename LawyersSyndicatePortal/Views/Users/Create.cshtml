@model LawyersSyndicatePortal.Models.UserCreateViewModel

@{
    ViewBag.Title = "إنشاء مستخدم جديد";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<style>
    /* الأنماط المخصصة الجديدة */
    .form-container {
        max-width: 800px;
        margin: auto;
    }

    .card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #0d6efd;
        color: white;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        padding: 1.5rem;
    }

    .form-group.row {
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .control-label {
        font-weight: 500;
        text-align: right;
    }

    .select2-container--bootstrap-5 .select2-selection {
        border: 1px solid #ced4da !important;
        border-radius: 0.375rem !important;
        padding: 0.375rem 0.75rem !important;
        height: auto !important;
    }

    .select2-container--bootstrap-5 .select2-selection__arrow {
        left: 0.75rem !important;
        right: auto !important;
    }
</style>

<div class="container py-5">
    <div class="form-container">
        <div class="card text-end">
            <div class="card-header">
                <h3 class="card-title mb-0 fw-bold">
                    <i class="fas fa-user-plus me-2"></i> إنشاء مستخدم جديد
                </h3>
            </div>
            <div class="card-body p-4">
                @using (Html.BeginForm("Create", "Users", FormMethod.Post, new { @class = "text-right", dir = "rtl" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger" })

                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.IdNumber, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.IdNumber, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.IdNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.LinkedLawyerIdNumber, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                        <div class="col-md-9">
                            <select id="LawyerSearchDropdown" name="LinkedLawyerIdNumber" class="form-control">
                                <option value="">--- اختر محامياً (اختياري) ---</option>
                                @if (Model != null && Model.Lawyers != null)
                                {
                                    foreach (var lawyer in Model.Lawyers)
                                    {
                                        <option value="@lawyer.Value">@lawyer.Text</option>
                                    }
                                }
                            </select>
                            @Html.ValidationMessageFor(model => model.LinkedLawyerIdNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.RoleId, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.RoleId, Model.Roles, "--- اختر دوراً ---", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 pt-3">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-save me-2"></i> إنشاء
                        </button>
                        <a href="@Url.Action("Index", "Users")" class="btn btn-secondary px-4">
                            <i class="fas fa-arrow-left me-2"></i> العودة للقائمة
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            // تهيئة حقل المحامي المرتبط باستخدام Select2
            $('#LawyerSearchDropdown').select2({
                placeholder: "ابحث عن محامٍ...",
                allowClear: true,
                dir: "rtl"
            });
        });
    </script>
}