@model IEnumerable<LawyersSyndicatePortal.Models.PbaContract>

@{
    ViewBag.Title = "عرض العقود";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="font-weight-light my-4">@ViewBag.Title</h3>
                </div>
                <div class="card-body">
                    <!-- Advanced Search Section -->
                    <div class="row mb-4">
                        <div class="col-12 text-center">
                            <button class="btn btn-primary btn-sm" type="button" data-toggle="collapse" data-target="#advancedSearchForm" aria-expanded="false" aria-controls="advancedSearchForm">
                                <i class="fas fa-search"></i> البحث المتقدم
                            </button>
                        </div>
                    </div>

                    <div class="collapse" id="advancedSearchForm">
                        @using (Html.BeginForm("Search", "Contracts", FormMethod.Get))
                        {
                            <div class="form-horizontal text-right">
                                <h4 class="mb-4">خيارات البحث</h4>
                                <hr />
                                <div class="form-row">
                                    <div class="col-md-4 mb-3">
                                        @Html.Label("LawyerName", "اسم المحامي", new { @class = "control-label" })
                                        @Html.TextBox("lawyerName", null, new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        @Html.Label("LawyerMembershipNumber", "رقم العضوية", new { @class = "control-label" })
                                        @Html.TextBox("lawyerMembershipNumber", null, new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        @Html.Label("DeedType", "نوع السند", new { @class = "control-label" })
                                        @Html.TextBox("deedType", null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-4 mb-3">
                                        @Html.Label("FirstPartyName", "اسم الطرف الأول", new { @class = "control-label" })
                                        @Html.TextBox("firstPartyName", null, new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        @Html.Label("FirstPartyId", "هوية الطرف الأول", new { @class = "control-label" })
                                        @Html.TextBox("firstPartyId", null, new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        @Html.Label("SecondPartyName", "اسم الطرف الثاني", new { @class = "control-label" })
                                        @Html.TextBox("secondPartyName", null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-4 mb-3">
                                        @Html.Label("SecondPartyId", "هوية الطرف الثاني", new { @class = "control-label" })
                                        @Html.TextBox("secondPartyId", null, new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        @Html.Label("AuthenticatorName", "اسم المصادق", new { @class = "control-label" })
                                        @Html.TextBox("authenticatorName", null, new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        @Html.Label("SyndicateBranch", "فرع النقابة", new { @class = "control-label" })
                                        @Html.TextBox("syndicateBranch", null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group mt-4 text-center">
                                    <input type="submit" value="بحث" class="btn btn-primary btn-lg" />
                                </div>
                            </div>
                        }
                    </div>

                    <hr />

                    <!-- Actions and Table -->
                    <div class="d-flex justify-content-between mb-4">
                        <div>
                            @Html.ActionLink("إنشاء عقد جديد", "Create", null, new { @class = "btn btn-success" })
                            @Html.ActionLink("استيراد من Excel", "ImportFromExcel", null, new { @class = "btn btn-info" })
                            @Html.ActionLink("تصدير إلى Excel", "ExportToExcel", null, new { @class = "btn btn-secondary" })
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered text-right">
                            <thead class="thead-dark">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ReceiptNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FileName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LawyerName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DeedType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FirstPartyName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SecondPartyName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ContractAuthenticationDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmployeeName)
                                    </th>
                                    <th>
                                        الإجراءات
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ReceiptNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FileName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LawyerName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DeedType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstPartyName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SecondPartyName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContractAuthenticationDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeeName)
                                        </td>
                                        <td>
                                            @Html.ActionLink("تعديل", "Edit", new { id = item.ContractId }, new { @class = "btn btn-warning btn-sm" }) |
                                            @Html.ActionLink("تفاصيل", "Details", new { id = item.ContractId }, new { @class = "btn btn-info btn-sm" }) |
                                            @Html.ActionLink("حذف", "Delete", new { id = item.ContractId }, new { @class = "btn btn-danger btn-sm" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
