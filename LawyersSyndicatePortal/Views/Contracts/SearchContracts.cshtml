@model IEnumerable<LawyersSyndicatePortal.Models.PbaContract>

@{
    ViewBag.Title = "البحث عن العقود";
}

<div class="container py-4 text-right" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card-lux">
                <div class="card-header-lux text-center">
                    <h5 class="card-title-lux my-2"><i class="fas fa-search me-2"></i>@ViewBag.Title</h5>
                </div>
                <div class="card-body-lux">
                    @using (Html.BeginForm("SearchContracts", "Contracts", FormMethod.Get))
                    {
                        <div class="form-horizontal">
                            <h4 class="mb-4">أدخل بيانات البحث:</h4>
                            <hr />
                            <div class="row g-3">

                                <div class="col-md-4">
                                    <label for="receiptNumber" class="form-label">رقم الإيصال</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-file-invoice"></i></span>
                                        @Html.TextBox("receiptNumber", null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label for="lawyerName" class="form-label">اسم المحامي</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-user-tie"></i></span>
                                        @Html.TextBox("lawyerName", null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label for="deedType" class="form-label">نوع السند</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-file-contract"></i></span>
                                        @Html.TextBox("deedType", null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label for="firstPartyName" class="form-label">اسم الطرف الأول</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                                        @Html.TextBox("firstPartyName", null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label for="secondPartyName" class="form-label">اسم الطرف الثاني</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                                        @Html.TextBox("secondPartyName", null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label for="contractAuthenticationDateFrom" class="form-label">تاريخ المصادقة (من)</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                        @Html.TextBox("contractAuthenticationDateFrom", null, new { @class = "form-control", type = "date" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label for="contractAuthenticationDateTo" class="form-label">تاريخ المصادقة (إلى)</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                        @Html.TextBox("contractAuthenticationDateTo", null, new { @class = "form-control", type = "date" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label for="syndicateBranch" class="form-label">فرع النقابة</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-building"></i></span>
                                        @Html.TextBox("syndicateBranch", null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-search me-2"></i> بحث
                                </button>
                                @Html.ActionLink("العودة إلى القائمة", "Index", null, new { @class = "btn btn-outline-secondary btn-lg me-2" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row justify-content-center mt-5">
            <div class="col-md-10">
                <div class="card-lux">
                    <div class="card-header-lux">
                        <h5 class="card-title-lux mb-0">نتائج البحث: @Model.Count() عقد</h5>
                    </div>
                    <div class="card-body-lux p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered text-right mb-0">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.ReceiptNumber)</th>
                                        <th>@Html.DisplayNameFor(model => model.FileName)</th>
                                        <th>@Html.DisplayNameFor(model => model.LawyerName)</th>
                                        <th>@Html.DisplayNameFor(model => model.DeedType)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstPartyName)</th>
                                        <th>@Html.DisplayNameFor(model => model.SecondPartyName)</th>
                                        <th>@Html.DisplayNameFor(model => model.ContractAuthenticationDate)</th>
                                        <th>@Html.DisplayNameFor(model => model.SyndicateBranch)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.ReceiptNumber)</td>
                                            <td>@Html.DisplayFor(modelItem => item.FileName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.LawyerName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.DeedType)</td>
                                            <td>@Html.DisplayFor(modelItem => item.FirstPartyName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.SecondPartyName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ContractAuthenticationDate)</td>
                                            <td>@Html.DisplayFor(modelItem => item.SyndicateBranch)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
}