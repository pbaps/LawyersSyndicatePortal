@model LawyersSyndicatePortal.Models.QuestionOption
@{
    int index = (int)ViewData["index"];
}
<div class="form-group row align-items-center option-row">
    @Html.HiddenFor(m => m.Id, new { name = $"Options[{index}].Id" })
    @Html.HiddenFor(m => m.QuestionId, new { name = $"Options[{index}].QuestionId" })
    <div class="col-md-8">
        @Html.EditorFor(m => m.Text, new { htmlAttributes = new { @class = "form-control", placeholder = "نص الخيار", required = "required", name = $"Options[{index}].Text" } })
        @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-3">
        <div class="form-check">
            @Html.HiddenFor(m => m.IsCorrect, new { name = $"Options[{index}].IsCorrect", value = "false" })
            <input type="checkbox" name="Options[@index].IsCorrect" value="true" class="form-check-input" @(Model.IsCorrect ? "checked" : "") />
            <label class="form-check-label">إجابة صحيحة</label>
        </div>
    </div>
    <div class="col-md-1">
        <button type="button" class="btn btn-danger btn-sm" onclick="removeOption(this)">
            <i class="fas fa-trash-alt"></i>
        </button>
    </div>
</div>

