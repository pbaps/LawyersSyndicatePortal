@{
    ViewBag.Title = "بوابة المحامي الفلسطيني - مركز غزة";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="jumbotron jumbotron-custom text-center mt-5 p-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-4 text-center mb-4 mb-md-0">
                <img src="~/Images/logo.png" alt="شعار النقابة" class="img-fluid union-logo">
          

            </div>
            <div class="col-md-8 text-md-right text-center">
                <h1 class="display-4 text-primary">بوابة نقابة المحامين</h1>
                <p class="lead">منصة إلكترونية متكاملة تهدف إلى تسهيل الخدمات القانونية للمحامين والمواطنين، وتعزيز التواصل بين النقابة وأعضائها، وتوفير مصادر قانونية موثوقة.</p>
                <p class="mt-4">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-success btn-lg">ادخل إلى حسابك &raquo;</a>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-right">
                    <h2 class="card-title text-primary"><i class="fas fa-gavel"></i> خدمات قانونية</h2>
                    <p class="card-text">اكتشف مجموعة واسعة من الخدمات القانونية التي يقدمها نخبة من المحامين المعتمدين، من استشارات ومعاملات قضائية.</p>
                    <p class="text-right"><a class="btn btn-outline-primary" href="#">المزيد &raquo;</a></p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-right">
                    <h2 class="card-title text-success"><i class="fas fa-comments"></i> استشارات سريعة</h2>
                    <p class="card-text">احصل على استشارات قانونية فورية وموثوقة من محامين متخصصين في مختلف المجالات القانونية.</p>
                    <p class="text-right"><a class="btn btn-outline-success" href="#">ابحث عن محامٍ &raquo;</a></p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-right">
                    <h2 class="card-title text-info"><i class="fas fa-book"></i> مصادر مفيدة</h2>
                    <p class="card-text">استعرض مكتبة غنية بالمواد القانونية، القوانين، اللوائح، والمقالات الهامة التي تخدم المحامين والجمهور.</p>
                    <p class="text-right"><a class="btn btn-outline-info" href="#">تصفح المصادر &raquo;</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    /* تنسيقات إضافية لـ Jumbotron */
    .jumbotron-custom {
        background-color: #f0f8ff; /* لون خلفية فاتح جذاب */
        color: #333;
        border-radius: 15px; /* حواف مستديرة */
        box-shadow: 0 4px 8px rgba(0,0,0,.1); /* ظل خفيف */
    }

    .union-logo {
        max-width: 180px; /* حجم الشعار */
        height: auto;
        border-radius: 50%; /* لجعل الشعار دائريًا إذا كان مناسبًا */
        border: 3px solid #007bff; /* حدود حول الشعار */
        padding: 5px;
        background-color: #fff;
    }
    /* تحسينات لبطاقات الخدمات */
    .card {
        border: none; /* إزالة الحدود الافتراضية للبطاقة */
        transition: transform 0.2s ease-in-out; /* تأثير عند تمرير الماوس */
    }

        .card:hover {
            transform: translateY(-5px); /* رفع البطاقة قليلاً عند التمرير */
        }

    .card-title {
        font-weight: bold;
        margin-bottom: 15px;
    }

    .card-text {
        color: #555;
    }

    .btn-outline-primary, .btn-outline-success, .btn-outline-info {
        border-width: 2px;
        font-weight: bold;
    }
</style>