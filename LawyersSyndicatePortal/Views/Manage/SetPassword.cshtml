@model LawyersSyndicatePortal.Models.SetPasswordViewModel
@{
    ViewBag.Title = "إنشاء كلمة مرور";
}

<style>
    body {
        background-color: #E8F0F7; /* تطبيق خلفية الصفحة من ملف التخطيط */
        font-family: 'Cairo', sans-serif; /* تطبيق خط Cairo من ملف التخطيط */
    }

    .container {
        padding-top: 50px;
        padding-bottom: 50px;
    }

    .card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 30px;
    }

    h2, h4 {
        color: #343a40;
        text-align: right; /* محاذاة لليمين للنصوص العربية */
    }

    hr {
        border-top: 1px solid #dee2e6;
        margin-bottom: 30px;
    }

    .form-label {
        text-align: right; /* محاذاة لليمين للتسميات */
        display: block; /* لجعل التسمية تأخذ سطرًا كاملاً */
        margin-bottom: .5rem;
    }

    .form-control {
        border-radius: 5px; /* حواف مستديرة لحقول الإدخال */
    }

    .btn {
        border-radius: 5px; /* حواف مستديرة للأزرار */
    }

    .text-danger {
        color: #dc3545 !important; /* لون أحمر لرسائل الخطأ */
        text-align: right; /* محاذاة لليمين لرسائل الخطأ */
        list-style-type: none; /* إزالة النقاط من قائمة الأخطاء */
        padding-right: 0; /* إزالة الحشوة الافتراضية للقائمة */
    }

    .alert {
        text-align: right; /* محاذاة لليمين للتنبيهات */
    }
</style>

<div class="container py-5" dir="rtl">
    <div class="card">
        <h2 class="mb-4">@ViewBag.Title</h2>
        <p class="alert alert-info text-right">
            ليس لديك اسم مستخدم/كلمة مرور محلية لهذا الموقع. أضف حسابًا محليًا
            حتى تتمكن من تسجيل الدخول بدون تسجيل دخول خارجي.
        </p>

        @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "row g-3", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h4>إنشاء تسجيل دخول محلي</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger mb-3" })
            <div class="col-12 mb-3">
                @Html.LabelFor(m => m.NewPassword, new { @class = "form-label" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
            <div class="col-12 mb-3">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <div class="col-12 mt-4 text-right">
                <input type="submit" value="تعيين كلمة المرور" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
