@model LawyersSyndicatePortal.Models.ForgotPasswordViewModel


@{
    ViewBag.Title = "استعادة كلمة المرور";
    
}

<div class="container-fluid py-5">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-3">
                    <h2 class="card-title mb-0">استعادة كلمة المرور</h2>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("AdminRecoveryRequest", "LawyerPasswordRecovery", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <p class="text-muted text-center mb-4">
                            يرجى إدخال رقم الهوية المسجل لاستعادة كلمة المرور الخاصة بك.
                        </p>
                        @Html.ValidationSummary("", new { @class = "text-danger text-center" })

                        <div class="mb-3">
                            @Html.LabelFor(m => m.IdNumber, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.IdNumber, new { @class = "form-control", placeholder = "أدخل رقم الهوية" })
                            @Html.ValidationMessageFor(m => m.IdNumber, "", new { @class = "text-danger" })
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">طلب استعادة</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
