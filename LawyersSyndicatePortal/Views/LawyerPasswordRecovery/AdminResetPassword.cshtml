@model LawyersSyndicatePortal.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "إعادة تعيين كلمة المرور";
    
}

<div class="container-fluid py-5">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-3">
                    <h2 class="card-title mb-0">إعادة تعيين كلمة المرور</h2>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("AdminResetPassword", "LawyerPasswordRecovery", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <p class="text-muted text-center mb-4">
                            يرجى إدخال كلمة المرور الجديدة وتأكيدها.
                        </p>
                        @Html.ValidationSummary("", new { @class = "text-danger text-center" })

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "كلمة المرور الجديدة" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "تأكيد كلمة المرور" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        @Html.HiddenFor(m => m.Code)
                        @Html.HiddenFor(m => m.UserId)
                        @Html.HiddenFor(m => m.IdNumber)

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">إعادة تعيين</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
