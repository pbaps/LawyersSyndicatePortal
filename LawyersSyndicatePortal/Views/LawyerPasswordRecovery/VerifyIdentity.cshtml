@{
    ViewBag.Title = "التحقق من الهوية";
    Layout = "~/Views/Shared/_PublicLayout.cshtml"; // تأكد من أن هذا هو اسم ملف الـ Layout الصحيح
}


@model LawyersSyndicatePortal.Models.VerifyIdentityViewModel

<div class="card p-4 shadow-sm" style="max-width: 500px; margin: auto;">
    <div class="card-header text-center bg-primary text-white rounded-top">
        <h3 class="my-2"><i class="fa-solid fa-user-lock me-2"></i> استعادة كلمة المرور</h3>
    </div>
    <div class="card-body">
        <h5 class="card-title text-center mb-4">التحقق من الهوية</h5>
        <p class="text-center text-muted">يرجى إدخال رقم الهوية وتاريخ المزاولة أو التدريب للتحقق من بياناتك.</p>

        @using (Html.BeginForm("RecoveryRequest", "LawyerPasswordRecovery", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }
            if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="mb-3">
                @Html.LabelFor(m => m.IdNumber, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.IdNumber, new { @class = "form-control", placeholder = "أدخل رقم الهوية" })
                @Html.ValidationMessageFor(m => m.IdNumber, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.VerificationDate, new { @class = "form-label" })
                <div class="input-group date" id="datepicker-container">
                    @Html.TextBoxFor(m => m.VerificationDate, new { @class = "form-control", placeholder = "اختر تاريخ المزاولة أو التدريب", autocomplete = "off" })
                    <span class="input-group-text"><i class="fa-regular fa-calendar-days"></i></span>
                </div>
                @Html.ValidationMessageFor(m => m.VerificationDate, "", new { @class = "text-danger" })
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg"><i class="fa-solid fa-check me-2"></i>تحقق</button>
            </div>
        }
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            // تهيئة datepicker
            $('#VerificationDate').datepicker({
                format: "mm/dd/yyyy", // تم التعديل ليقبل التنسيق الشهر/اليوم/السنة
                language: "ar",
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
}
